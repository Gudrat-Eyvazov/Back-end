@model Category
<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0 font-size-18">Jobs Grid</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Jobs</a></li>
                            <li class="breadcrumb-item active">Jobs Grid</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->


        <div class="row">
            <div class="col-lg-12">
                <div class="card job-filter">
                    <div class="card-body p-3">

                        <form class="row" method="post" asp-area="admin" asp-controller="Category" asp-action="Add" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()

                            <div class="col-md-3">
                                <label>
                                    Name
                                </label>
                                <input asp-for="Name" type="text" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-2">
                                <label>
                                    Is Active
                                </label>
                                <input asp-for="IsActive" class="form-check" />
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-danger mt-3 btn-block">Add Database </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
        <!--end row-->


    </div>
</div><!-- End Page-content -->